<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_register">



    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="13dp"
        android:text="Student Registeration" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="63dp"
        android:text="Name" />

    <EditText
        android:id="@+id/stname"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginEnd="66dp"
        android:layout_marginTop="-17dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/stemail"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stname"
        android:layout_below="@+id/password"
        android:ems="10"
        android:hint="Email Id"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/stemail"
        android:layout_alignStart="@+id/textView10"
        android:text="Email" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/password"
        android:layout_alignStart="@+id/textView10"
        android:text="password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/stname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/stcoursename"
        android:layout_alignStart="@+id/textView10"
        android:text="course name" />

    <EditText
        android:id="@+id/stcoursename"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stname"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:hint="Course Name"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/strollno"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/stname"
        android:ems="10"
        android:hint="Roll No"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/stregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnncamera"
        android:layout_marginEnd="95dp"
        android:text="Register" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="-126dp"
        android:text="Roll number" />

    <Button
        android:id="@+id/btnncamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginBottom="13dp"
        android:onClick="Action"
        android:text="Upload photo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/stsem"
        android:layout_alignStart="@+id/textView10"
        android:text="Sem" />

    <EditText
        android:id="@+id/stsem"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/stname"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:hint="Semester"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/stcourseid"
        android:layout_alignStart="@+id/textView10"
        android:text="Course Id" />

    <EditText
        android:id="@+id/stcourseid"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_below="@+id/stsem"
        android:ems="10"
        android:hint="courseId"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="111dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="69dp"
        android:layout_marginStart="32dp"
        app:srcCompat="?attr/colorAccent" />


</RelativeLayout>